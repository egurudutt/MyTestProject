<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/blue"
                android:startColor="@color/blue"></gradient>
        </shape>
    </item>
    <item android:id="@id/PLACEHOLDER_BITMAP">
